<Page
    x:Class="FitnessClubMWWM.Ui.Desktop.Pages.SlidePages.SchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessClubMWWM.Ui.Desktop.Pages.SlidePages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="page"
    Title="SchedulePage"
    d:DesignHeight="450"
    Background="White"
    DataContext="{Binding SchedulePageViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Page.Style>
        <StaticResource ResourceKey="PageNextWorkingBaseStyle" />
    </Page.Style>


    <Page.Resources>
        <Style x:Key="GridSplitterStyle" TargetType="{x:Type GridSplitter}">
            <Setter Property="Width" Value="0.5" />
            <Setter Property="Background" Value="{StaticResource BlueDataGridRowDetailsViewColor}" />
        </Style>
    </Page.Resources>

    <Grid>
        <Border
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
           
        </Border>
        <StackPanel
            Margin="10 50 10 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Button
                Padding="5"
                HorizontalAlignment="Right"
                VerticalContentAlignment="Center"
                Content="+ Создать новую запись в расписании"
                Margin="10 0 0 20"
                Cursor="Hand"
                FontSize="14"
                Foreground="White"
                Command="{Binding ShowNewEntryInScheduleWindowCommand}"
                Template="{StaticResource ButtonBaseControlTemplate}" />
            <ScrollViewer VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                    <ColumnDefinition Width="120*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource HeaderStyle}"
                    Text="Понедельник" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource HeaderStyle}"
                    Text="Вторник" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource HeaderStyle}"
                    Text="Среда" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource HeaderStyle}"
                    Text="Четверг" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="4"
                    Style="{StaticResource HeaderStyle}"
                    Text="Пятница" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="5"
                    Style="{StaticResource HeaderStyle}"
                    Text="Суббота" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="6"
                    Style="{StaticResource HeaderStyle}"
                    Text="Воскресенье" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    Height="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource BlueDataGridRowDetailsViewColor}" />


                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Style="{StaticResource GridSplitterStyle}" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Style="{StaticResource GridSplitterStyle}" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    Style="{StaticResource GridSplitterStyle}" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="3"
                    Style="{StaticResource GridSplitterStyle}" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="4"
                    Style="{StaticResource GridSplitterStyle}" />
                <GridSplitter
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="5"
                    Style="{StaticResource GridSplitterStyle}" />

                <!--  Расписание занятий для понедельника (переработать список отсориторовать понедельник)  -->
                <ListBox
                    x:Name="TrainingsMonday"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!--  Расписание занятий для вторника (переработать список отсориторовать вторник)  -->
                <ListBox
                    x:Name="TrainingsTuesday"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Расписание занятий для среды (переработать список отсориторовать среду)  -->
                <ListBox
                    x:Name="TrainingsWednesday"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Расписание занятий для четверга (переработать список отсориторовать четверг)  -->
                <ListBox
                    x:Name="TrainingsThursday"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Расписание занятий для пятницы (переработать список отсориторовать пятницу)  -->
                <ListBox
                    x:Name="TrainingsFriday"
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <!--  Расписание занятий для субботы (переработать список отсориторовать субботу)  -->
                <ListBox
                    x:Name="TrainingsSaturday"
                    Grid.Row="1"
                    Grid.Column="5"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Расписание занятий для воскресенья (переработать список отсориторовать воскресенье)  -->
                <ListBox
                    x:Name="TrainingsSunday"
                    Grid.Row="1"
                    Grid.Column="6"
                    Margin="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding GetTrainings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="White"
                                BorderBrush="{StaticResource BackgroundThiknessGrey}"
                                BorderThickness="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=Time}" TextAlignment="Center" />
                                    <TextBlock Text="{Binding Path=NameGym}" TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</Page>
